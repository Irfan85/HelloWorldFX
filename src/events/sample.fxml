<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="events.Controller" xmlns:fx="javafx.com/fxml" alignment="center" hgap="10" vgap="10">

	<TextField  fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>
	<Button fx:id="helloButton" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Click Me!" onAction="#onButtonClicked"/>
	<Button fx:id="byeButton" GridPane.rowIndex="1" GridPane.columnIndex="1" text="Bye" onAction="#onButtonClicked"/>
</GridPane>