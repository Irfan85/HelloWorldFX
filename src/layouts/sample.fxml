<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="layouts.Controller" xmlns:fx="javafx.com/fxml" alignment="center" hgap="10" vgap="10" gridLinesVisible="true">
	<columnConstraints>
		<!-- We want the first column to occupy 50% of the scene width -->
		<ColumnConstraints percentWidth="50.0"/>
		<!-- Same goes for the second column -->
		<ColumnConstraints percentWidth="50.0"/>
	</columnConstraints>
	
	
	<Button text="Button One" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
	<Button text="Button Two" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
	<Button text="Button Three" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
	<Button text="Long Button Four" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
	<Button text="Button Five" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

</GridPane>