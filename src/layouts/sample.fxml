<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="layouts.Controller" xmlns:fx="javafx.com/fxml">

	<top>
		<Label text="This is in the top position" alignment="center" BorderPane.alignment="center"
				style="-fx-border-color: blue; -fx-border-width: 3px; -fx-border-style: dashed;"/>
	</top>
	
	<center>
		<Label text="This is in the center position"
				style="-fx-border-color: blue; -fx-border-width: 3px; -fx-border-style: dashed;"/>
	</center>
	
	<left>
		<Label text="This is in the left position"
				style="-fx-border-color: blue; -fx-border-width: 3px; -fx-border-style: dashed;"/>
	</left>
	
	<right>
		<Label text="This is in the right position"
				style="-fx-border-color: blue; -fx-border-width: 3px; -fx-border-style: dashed;"/>
	</right>

	<bottom>
		<HBox alignment="bottom_right" spacing="10">
	
			<padding>
				<Insets bottom="10" right="10"/>
			</padding>
			
			<Button text="Okay" prefWidth="90"/>
			<Button text="Cancel" prefWidth="90"/>
			<Button text="Help" prefWidth="90"/>
	
		</HBox>
	</bottom>
	
</BorderPane>
